/* Javascript */

document.getElementById('div1').onclick = codered;
document.getElementById('div2').onclick = codeblue;

function codered() {
var txt;
var r = confirm("Press a button")
  if (r == true) {txt = "Okay!
  else {txt = "Are you sure you want to cancel?"}
  alert(txt)
}

function codeblue() {
  alert("Div 2!")
}


